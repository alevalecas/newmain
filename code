// Include the V5 Library
#include "vex.h"
  
// Allows for easier use of the VEX Library
using namespace vex;

int main() {
  Motor11.setStopping(hold);
  Motor11.setMaxTorque(85, percent);
  MotorGroup12.setStopping(hold);
  MotorGroup12.setMaxTorque(85, percent);
 

}
 
